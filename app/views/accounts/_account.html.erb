<section class="vh-100" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100">
	<div class="row d-flex justify-content-center align-items-center h-100">
	  <div class="col col-lg-6 mb-4 mb-lg-0">
		<div class="card mb-3" style="border-radius: .5rem;">
		  <div class="row g-0">
			<div class="col-md-4 gradient-custom text-center text-gray"
			  style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
			  <svg xmlns="http://www.w3.org/2000/svg" width="75" height="75" fill="white" viewBox="0 0 16 16" alt="Avatar" class="img-fluid my-5">
				 <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
				 <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
			  </svg>
	
			  <h5 style="color:white"><%= account.full_name %></h5>
			  <i class="far fa-edit mb-5"></i>
			</div>
			<div class="col-md-8">
			  <div class="card-body p-4">
				<h6>Profile</h6>
				<hr class="mt-0 mb-4">
				<div class="row pt-1">
				  <div class="col-6 mb-3">
						<h6>Username</h6>
						<%= account.username %>
				  </div>

				  <div class="col-6 mb-3">
					<h6>Email</h6>
					<%= account.email %>
				  </div>
				  
				  <div class="col-6 mb-3">
					<h6>Mobile No.</h6>
					<%= account.mobile_number %>
				  </div>
				  <div>
					  <a href="/accounts/<%= session[:account_id] %>/edit" style="text-decoration:none">Edit Account
					 
					  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16" >
						  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
						  
						  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
					  </svg>
					  </a>
				  </div>
				</div>
			  </div>
			</div>
		  </div>
		</div>
		<a href="/games"><button type="button" class="btn btn-secondary">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
		<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
		</svg> 
		Go to Games</button></a>
	  </div>
	</div>
  </div>
</section>