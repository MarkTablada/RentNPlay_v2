<%= form_with(model: account) do |form| %>

  <div>
    <%= form.hidden_field :user_type %>
  </div>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, autocomplete: "password", id: "floatingPassword", placeholder: "Password", class: "form-control" %>
  </div>

  <div>
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.label :full_name, style: "display: block" %>
    <%= form.text_field :full_name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :mobile_number, style: "display: block" %>
    <%= form.text_field :mobile_number %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>
