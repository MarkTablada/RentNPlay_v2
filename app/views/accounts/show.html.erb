<p style="color: green"><%= notice %></p>

<%= render @account %>

<div>
  <a href="/accounts/<%= session[:account_id] %>/edit"><button>Edit Account</button></a> |
  <% if session[:is_admin] == 0 then %>
    <a href="/accounts"><button>Back to Accounts</button></a>
    <%= button_to "Destroy this account", @account, method: :delete %>
  <% end %>
  <a href="/games"><button>Go to Games</button></a>

</div>
