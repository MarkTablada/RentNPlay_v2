<%= form_with(model: game) do |form| %>
  <% if game.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :owner_id, style: "display: block" %>
    <%= form.number_field :owner_id %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :release_date, style: "display: block" %>
    <%= form.date_field :release_date %>
  </div>

  <div>
    <%= form.label :genre, style: "display: block" %>
    <%= form.text_field :genre %>
  </div>

  <div>
    <%= form.label :maturity_rating %>
    <p>
    <%= form.radio_button :maturity_rating, 'E', :checked => true %> E
    <%= form.radio_button :maturity_rating, 'E10' %> E10
    <%= form.radio_button :maturity_rating, 'T' %> T
    <%= form.radio_button :maturity_rating, 'M17' %> M17
    <%= form.radio_button :maturity_rating, 'A18' %> A18
    <%= form.radio_button :maturity_rating, 'RP' %> RP
    <%= form.radio_button :maturity_rating, 'RP17' %> RP17
  </div>

  <div>
    <%= form.label :platform, style: "display: block" %>
    <%= form.text_field :platform %>
  </div>

  <div>
    <%= form.label :rent_rate, style: "display: block" %>
    <%= form.number_field :rent_rate %>
  </div>

  <div>
    <%= form.label :max_rent_duration, style: "display: block" %>
    <%= form.number_field :max_rent_duration %>
  </div>

  <div>
  Status
    <%= form.radio_button :status, 'available', :checked => true %> 
    <%= form.label :status, 'available', :value => 'available' %>
    <%= form.radio_button :status, 'unavailable' %>
    <%= form.label :status, 'unavailable', :value => 'unavailable' %>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <div>
    User wants to rent the game
    <p>
    <a href=""><button>accept</button></a>
    <a href=""><button>decline</button></a>
  </div>
<% end %>
