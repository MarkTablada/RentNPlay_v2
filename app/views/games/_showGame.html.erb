<%= stylesheet_link_tag "games_index"%>

<div class="container pt-5">
  <div class="row">
    <div class="col">
      <svg class="bd-placeholder-img img-fluid rounded-start" width="100%" height="600" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="45%" y="50%" fill="#dee2e6" dy=".3em">Image</text></svg>
    </div>
    <div class="col">
      <div class="row-md-auto">
        <div class="container">
          <h2>
            <%= @game.name %>
          </h2>

          <p>
            <small class="text-muted">owned by </small>
            <%= Account.find(@game.owner_id).username %>
          </p>

          <p>
            released
            <%= @game.release_date %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @game.description %>
          </p>

          <p>
            <strong>Genre:</strong>
            <%= @game.genre %>
          </p>

          <p>
            <strong>Maturity Rating:</strong>
            <%= @game.maturity_rating %>
          </p>

          <p>
            <strong>Platform:</strong>
            <%= @game.platform %>
          </p>

          <p>
            <strong>Rent rate:</strong>
            <%= @game.rent_rate %>
          </p>

          <p>
            <strong>Max rent duration:</strong>
            <%= @game.max_rent_duration %>
          </p>

          <p>
            <strong>Status:</strong>
            <%= @game.status %>
          </p>
        </div>
      </div>
      <div class="row">
        <%= render "show_options" %>
      </div>
    </div>
  </div>
</div>
