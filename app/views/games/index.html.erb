<p style="color: green"><%= notice %></p>

<a href="/logout"><button>Logout</button></a>

<a href="/accounts/<%= session[:account_id] %>"><button>Profile</button></a>

<h1> Welcome, <%= Account.find(session[:account_id]).full_name %> </h1>

<h1>Games</h1>

<div id="games">
  <% @games.each do |game| %>
    <%= render game %>
    <p>
      <%= link_to "Show this game", game %>
    </p>
  <% end %>
</div>

<%= link_to "New game", new_game_path %>
