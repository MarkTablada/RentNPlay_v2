<p style="color: green"><%= notice %></p>

<%= link_to "Log out", "/logout" %>

<%= link_to "Account", "/accounts/#{session[:account_id]}" %>

<h1> Welcome, <%= Account.find(session[:account_id]).full_name %> </h1>

<h1>Games</h1>

<div id="games">
  <% @games.each do |game| %>
    <%= render game %>
    <p>
      <%= link_to "Show this game", game %>
    </p>
  <% end %>
</div>

<%= link_to "New game", new_game_path %>
