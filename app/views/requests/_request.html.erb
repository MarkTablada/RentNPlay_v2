<div id="<%= dom_id request %>" class="mt-3">


    <strong>Status:</strong>
    <% if request.status == "Pending" %>
      <p class="text-warning" style="display:inline"><%= request.status %></p>
    <% elsif request.status == "rejected" %>
      <p class="text-danger" style="display:inline"><%= request.status %></p>
    <% else %>
      <p class="text-success" style="display:inline"><%= request.status %></p>
    <% end %>


  <p>
    <strong>Rent duration:</strong>
    <%= request.rent_duration %> weeks
  </p>
</div>
